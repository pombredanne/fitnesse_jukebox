      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.2</version>
        <executions>
          <execution>
            <id>start-fitnesse</id>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>

        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-classpath</argument>
            <classpath/>
            <argument>fitnesseMain.FitNesseMain</argument>
            <argument>-d</argument><argument>${project.basedir}</argument>
            <argument>-e</argument><argument>${fitnesse.runtime.daysToKeepVersions}</argument>
            <argument>-p</argument><argument>${fitnesse.runtime.port}</argument>
          </arguments>
        </configuration>
      </plugin>
            
      
			<plugin>
				<groupId>org.linuxstuff.maven</groupId>
				<artifactId>trinidad-maven-plugin</artifactId>
				<version>20120309</version>
				<configuration>
					<testRepositoryUri>${project.basedir}</testRepositoryUri>
					<breakBuildOnFailure>true</breakBuildOnFailure>
					<suites>
						<suite>SelRunner.RegressionTests</suite>
						<suite>SelRunner.DemoSamples</suite>
					</suites>
				</configuration>
				<executions>
					<execution>
						<id>run-tests</id>
						<phase>integration-test</phase>
						<goals>
							<goal>run-tests</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>

				    <mainClass>fitnesseMain.FitNesseMain</mainClass>
					<arguments>
              			<argument>-d</argument>
						<argument>${project.basedir}</argument>
						<argument>-e</argument>
						<argument>${fitnesse.runtime.daysToKeepVersions}</argument>
						<argument>-p</argument>
                        <argument>${fitnesse.runtime.port}</argument>
